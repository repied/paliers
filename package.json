{
  "name": "paliers",
  "version": "1.0.0",
  "description": "Client side tool to display scuba diving desaturation plan",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "serve": "http-server ./",
    "start": "npm run build && npm run serve",
    "main": "node js/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/repied/paliers.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/repied/paliers/issues"
  },
  "homepage": "https://github.com/repied/paliers#readme",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.test.ts"],
    "moduleFileExtensions": ["ts", "js"],
    "collectCoverageFrom": [
      "src/*.ts"
    ]
  },
  "files": [
    "js",
    "docs",
    "media"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
