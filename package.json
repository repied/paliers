      "src/**/*.ts",
      "!src/types.ts",
      "!src/script.ts",
      "!src/plan_analysis.ts",
      "!src/translations.ts"
    ]
  },
  "files": [
    "dist",
    "docs"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
